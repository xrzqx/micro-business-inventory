body{
    margin: 0;
}
.container-f {
    display: flex;
}

.sidenav{
    /* padding-left: 1rem;
    padding-right: 1rem; */
    /* overflow: hidden; */
    height: 100vh;
    width: 260px;
    background: #181818;
    /* padding: 1rem; */
    overflow-y: auto;
    overflow-x: hidden;
    /* scrollbar-width: thin; */
}

.sidenav::-webkit-scrollbar{
    width: 0.5em;
}

.sidenav::-webkit-scrollbar-thumb{
    background: rgba(255, 255, 255, 0.3);
    border-radius: 100vw;
}

.sidenav::-webkit-scrollbar-thumb:hover{
    background: rgba(255, 255, 255, 0.5);;
}

.main-list{
    display: flex; 
    align-items: center;
    justify-content: center;
    list-style: none;
    padding: 0;
    margin: 0;
    flex-direction: column
}

.main-list li {
    padding-left: 1rem;
    padding-right: 1rem;
    width: 100%;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    color: #fff;
    cursor: pointer;
    font-size: 18px;
}

/* Styles for the sublist (nested <ul>) */
.sublist {
    background: #6b0303;
    display: none;
    list-style: none;
    padding: 0;
    margin: 0;
    margin-left: 1rem;
    width: 100%;
}
.sublist-item{
    background-color: #1d7437;
    border-left: 3px solid white;
    /* width: 100%; */
    /* padding-left: 1rem; */
    /* transition: rgba(33, 32, 156, 0.3) 0.3s ease; */
}

.sublist-item a{
    height: 100%;
    width: 100%;
    /* background-color: #d60000; */
    text-decoration: none;
    color: #fff;
}

.selected{
    background-color: rgba(33, 32, 156, 0.3);
    border-left: 3px solid #21209C;
}

.sublist-item:hover:not(.selected) {
    /* Define the styles for the hover state */
    background-color: rgba(33, 32, 156, 0.3);
    /* Add any other styles you want for the hover state */
}

.nonlist-item:hover{
    background-color: rgba(33, 32, 156, 0.3);
}

/* Styles for sublist items (nested <li>) */
.sublist li {
    /* background-color: yellow; */
    margin-left: 10px;
    width: 100%;
    height: 30px; /* Adjust height as needed */
    display: flex;
    align-items: center;
    justify-content: flex-start;
    color: #fff;
    cursor: pointer;
    font-size: 14px; /* Adjust font size as needed */
}

.flex-row-list{
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
}

/* .material-symbols-outlined{
    transform: rotate(90deg);
} */
.toggle-icon {
    /* cursor: pointer; */
    color: white;
}

.toggle-icon-sidenav {
    /* cursor: pointer; */
    color: black;
}

.rotate {
    transform: rotate(90deg);
}

.content{
    flex: 1;
    background: #fcfcfc;
    padding: 1rem;
    /* border: 10px solid rgb(204, 167, 0); */
}

h1{
    margin-top: 0;
    margin-bottom: 1rem;
}

.card-container{
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
}

.card-f{
    padding: 1rem;
    height: 280px;
    width: 410px;
    background: #fff;
    border: 1px solid rgba(0, 0, 0, 0.175);
    border-radius: 5px;
}

.card-title-f{
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
}

.f-row{
    display: flex;
}

.f-col{
    margin-right: 2rem;
}

.card-body-f{
    font-size: 1rem;
}

.toggle-btn-sidenav{
    height: 100vh;
    padding: 0;
    border: none;
    /* background-color: #fff; */
    background-color: #d60000;
}

